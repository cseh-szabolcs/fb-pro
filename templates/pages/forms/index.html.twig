{% extends 'layouts/default.html.twig' %}

{% block title %}Formulare{% endblock %}

{% block action %}
    <button type="button" class="btn btn-lg btn-primary" data-bs-toggle="modal" data-bs-target="#formCreateModal">
        Neuen Formular erstellen
    </button>
{% endblock %}

{% block main %}
    <div class="app-box-bg p-4 h-100">
        <div id="formsList" x-data="formsList">
            <twig:Html:Loader:All x-if="!initialized" />
            <p x-text="foo"></p>
        </div>
    </div>
{% endblock %}

{% block modal %}
    <twig:Html:Modal title="Neuen Formular erstellen" :action="null" id="formCreateModal" size="lg" x-data="{valid:false}">
        {{ form_start(form, {action: path('app_forms_create'), method: 'post'}) }}
        {{ form_row(form.title, {attr: {'@input': "valid = $event.target.value.trim().length > 2"}}) }}
        <div class="d-flex justify-content-end pt-3">
            <button type="submit" class="btn btn-lg btn-primary w-100" :disabled="!valid">
                Erstellen
            </button>
        </div>
        {{ form_end(form) }}
    </twig:Html:Modal>
{% endblock %}

{% block scripts %}
    <script type="module" src="{{ asset('js/components/list.js') }}"></script>
    <script type="module" src="{{ asset('js/pages/forms/index.js') }}"></script>
    <script type="module">
        import app from "app";
        app.pages.formList({
            name: "formsList",
            path: "{{ path('app_forms_fetch') }}",
        })
    </script>
{% endblock %}

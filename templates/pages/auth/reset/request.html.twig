{% extends 'layouts/public.html.twig' %}

{% block title %}
    Reset Password
{% endblock %}

{% block content %}
    {% for message in app.flashes('auth_reset_invalid_token') %}
        <div class="alert alert-danger mb-4" role="alert">
            Der Link zum Zurücksetzen deines Passworts ist nicht
            korrekt oder ist nicht mehr gültig.
        </div>
    {% endfor %}

    {{ form_start(form) }}
    <div class="mb-3">
        {{ form_row(form.email) }}
    </div>
    <div class="mb-3">
        <button class="btn btn-lg btn-primary w-100" type="submit">
            Reset Password
        </button>
    </div>
    {{ form_end(form) }}
    <p>
        Your can remember? <a href="{{ path('app_auth_login') }}">Login</a> :)
    </p>
{% endblock %}

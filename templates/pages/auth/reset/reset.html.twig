{% extends 'layouts/auth.html.twig' %}

{% form_theme form 'forms/theme/app_floating.html.twig' %}

{% block title %}
    Reset Password
{% endblock %}

{% block content %}
    {{ form_start(form) }}
    <div class="mb-3">
        {{ form_row(form.password) }}
    </div>
    <div class="mb-3">
        <button class="btn btn-lg btn-primary w-100" type="submit">
            Reset Password
        </button>
    </div>
    {{ form_end(form) }}
    <p>
        Your can remember? <a href="{{ path('app_auth_login') }}">Login</a> :)
    </p>
{% endblock %}

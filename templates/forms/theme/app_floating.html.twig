{# form_theme form 'forms/theme/app_floating.html.twig' #}
{% use 'bootstrap_5_layout.html.twig' %}

{# Globaler Zeilen-Wrapper #}
{% block form_row %}
    {% set rawLabel = form.vars.label is same as(false) ? '' : (form.vars.label ?? form.vars.name|humanize) %}
    {% set translatedLabel = rawLabel is not empty ? rawLabel|trans(form.vars.label_translation_parameters, form.vars.translation_domain) : '' %}
    <div class="mb-3 form-floating">
        {{- form_widget(form, { attr: {placeholder: translatedLabel} }) -}}
        {{- form_label(form) -}}
        {{- form_help(form) -}}
        {{- form_errors(form) -}}
    </div>
{% endblock %}

{% block form_label %}
    {% if label is not same as(false) %}
        {% if label is empty %}{% set label = name|humanize %}{% endif %}
        {% set label_attr = {  } %}
        {% if not compound %}{% set label_attr = label_attr|merge({ for: id }) %}{% endif %}
        <label{% with { attr: label_attr } %}{{ block('attributes') }}{% endwith %}>
            {{ label|trans(label_translation_parameters, translation_domain) }}
        </label>
    {% endif %}
{% endblock %}


